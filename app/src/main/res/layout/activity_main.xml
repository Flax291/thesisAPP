<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/compass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_compass"
        android:layout_margin="16dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/user_marker"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:src="@drawable/user_marker"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать путь"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очистить"
        android:layout_below="@id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/open_marker_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_marker_button_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.routeapp.RouteView
            android:id="@+id/routeView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>
