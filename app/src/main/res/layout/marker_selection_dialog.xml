<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите маркер"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mushrooms_marker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mushrooms"
            android:onClick="onClick"
            android:clickable="true"
            android:padding="8dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/berries_marker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/berries"
            android:onClick="onClick"
            android:clickable="true"
            android:padding="8dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/camping_marker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/camping"
            android:onClick="onClick"
            android:clickable="true"
            android:padding="8dp"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
